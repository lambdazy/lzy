FROM nvidia/cuda:11.4.2-devel-ubuntu20.04

### conda setup
ENV PATH="/root/miniconda3/bin:$PATH"
ARG PATH="/root/miniconda3/bin:$PATH"
RUN apt-get update && \
    apt-get install -y wget
RUN wget https://repo.anaconda.com/miniconda/Miniconda3-latest-Linux-x86_64.sh \
    && mkdir /root/.conda \
    && bash Miniconda3-latest-Linux-x86_64.sh -b \
    && rm -f Miniconda3-latest-Linux-x86_64.sh

SHELL ["/bin/bash", "-c"]

# for future interactive shell sessions
RUN conda init bash

COPY lzy-servant/create_env.sh /
COPY lzy-servant/requirements.txt /
COPY lzy-servant/prepare_envs.sh /
RUN chmod a+rx /create_env.sh
RUN chmod a+rx /prepare_envs.sh
RUN ./prepare_envs.sh

### deps
RUN apt-get -y update --fix-missing
RUN apt-get install -y fuse lsof procps

### java
ENV DEBIAN_FRONTEND noninteractive
RUN apt-get install -y openjdk-11-jdk
ENV JAVA_HOME /usr/lib/jvm/java-11-openjdk-amd64/
RUN export JAVA_HOME
